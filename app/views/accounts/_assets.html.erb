<table class="table table-bordered">
  <thead>
    <th>Assets</th>
    <th class="col-sm-4 col-xs-3 col-md-4">Amount</th>
  </thead>
  <tbody>
    <% if @incomes.present? %>
      <tr>
        <td colspan="2"><b>Category</b></td>
      </tr>
      <% @incomes.each do |category, transactions| %>
        <tr class='sub-tr-first-td'>
          <td><%= category %></td>
          <td><span class="pull-right">
            <%= money_format(transactions.flatten.map{|t| t.amount}.sum) %>
          </span></td>
        </tr>
      <% end %>
      <tr>
        <td><b>Category Incomes Total</b></td>
        <td><b class="pull-right"><%= money_format(@incomes.values.flatten.map{|t| t.amount}.sum) %></b></td>
      </tr>
      <tr>
        <td><b class="capital">Total Assets</b></td>
        <td><span class="pull-right">
          <b><%= money_format(@incomes.values.flatten.map{|t| t.amount}.sum) %></b>
        </span></td>
      </tr>
    <% else %>
      <tr>
        <td>No Income Found</td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
