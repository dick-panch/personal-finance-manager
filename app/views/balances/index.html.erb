<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-8'>
    <h2>Savings / Bank & Cash Balance</h2>
    <ol class='breadcrumb'>
      <%= render_breadcrumbs tag: :li %>
    </ol>    
  </div>
  <div class="col-lg-2 pull-right mrgtop30">
    <%= select_tag :year, options_for_select(@years, params[:year].present? ? params[:year] : Date.today.year), class: 'form-control', onchange: "window.location.href='/balances/?year='+$(this).val()" %>
  </div>    
</div>

<div class='wrapper wrapper-content animated fadeInRight'>

  <div class='row'>
    <div class='col-lg-12'>
      <div class='ibox float-e-margins'>

        <div class='ibox-content'>
        	<div class='table-responsive'>
        		
        		<table class='table table-hover' >
              <thead>
                <tr>                  
                  <th>Month</th>
                  <th>Income</th>
                  <th>Expense</th>
                  <th>Investment</th>
                  <th>Balance</th>                  
                </tr>
              </thead>
              <tbody>
              	<% @results.each do |data| %>
              		<tr>
              			<td><%= Date::MONTHNAMES[data[:month]] %></td>
              			<td><%= money_format(data[:income]) %></td>
              			<td><%= money_format(data[:expense]) %></td>
              			<td><%= money_format(data[:investment]) %></td>
              			<td><%= money_format(data[:income] - (data[:expense] + data[:investment]) ) %></td>
              		</tr>
              	<% end %>
              	<tr>
              		<td></td>
              		<td></td>
              		<td></td>
              		<td><b>Yearly Total</b></td>
              		<td><%= money_format(@yearly_total) %></td>
              	</tr>
              	<tr>
              		<td></td>
              		<td></td>
              		<td></td>
              		<td><b>Total Balance </b></td>
              		<td><%= money_format(@total) %></td>
              	</tr>              	
              </tbody>              
            </table>
        	</div>
        </div>

      </div>
    </div>
  </div>
</div>