<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-10'>
    <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
    <ol class='breadcrumb'>
      <%= render_breadcrumbs tag: :li %>
    </ol>    
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-lg-8'>
      <div class='ibox float-e-margins'>
        <div class='ibox-content'>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>            
            <div class="form-group no-fg">
              <%= f.label :email, class: 'col-sm-3 control-label' %>
              <div class='col-sm-8'>
                <p class="no-text-field"><%= f.object.email %></p>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :username, class: 'col-sm-3 control-label' %>
              <div class='col-sm-8'>
                <p class="no-text-field"><%= f.object.username %></p>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :name, 'Fullname', class: 'col-sm-3 control-label' %>
              <div class='col-sm-8'>
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>              
              <div class="form-group">
                <label class="col-sm-3 control-label"></label>
                <div class="col-sm-8">
                  <h4>Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong></h4>
                </div>              
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :password, class: 'col-sm-3 control-label' %>             
              <div class="col-sm-8">
                <i>(leave blank if you don't want to change it)</i>
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
                <% if @minimum_password_length %>                
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, 'Confirmation', class: 'col-sm-3 control-label' %>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation', class: 'form-control' %>
              </div>              
            </div>

            <div class="form-group">
              <%= f.label :current_password, class: 'col-sm-3 control-label' %> 
              <div class="col-sm-8">
                <i>(we need your current password to confirm your changes)</i>
                <%= f.password_field :current_password, autocomplete: "off", placeholder: 'Current Password', class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-8 col-sm-offset-3">
                <%= link_to 'Cancel', dashboard_url, class: 'btn btn-white', data: {disable_with: 'Please Wait...'} %>
                <%= f.submit "Update", class: 'btn btn-primary', data: {disable_with: 'Please Wait...' } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class='ibox float-e-margins'>
        <div class='ibox-content'>
          <h3>Cancel my account</h3>
          <p>
            Unhappy? 
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>