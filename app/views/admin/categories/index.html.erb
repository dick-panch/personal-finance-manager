<div class='row wrapper border-bottom white-bg page-heading'>
  <div class='col-lg-10'>
    <h2>Categories</h2>
    <ol class='breadcrumb'>
      <%= render_breadcrumbs tag: :li %>
    </ol>    
  </div>
  <div class='col-lg-2'>
    <p class='add-record'>
      <%= link_to new_admin_category_url, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading...".html_safe} do %>
        <i class="fa fa-plus"></i> Add New Category
      <% end %>
    </p>    
  </div>
</div>

<div class='wrapper wrapper-content animated fadeInRight'>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='ibox float-e-margins'>
        <div class='ibox-content'>
          <div class='table-responsive'>

            <table class='table table-striped table-bordered table-hover dataTables' >
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Created At</th>
                  <th>Updated At</th>
                  <th class='no-sort noExport'>Action</th>
                </tr>
              </thead>
              <tbody>
                <% categories.each do |category| %>                  
                  <tr class='gradeX'>
                    <td><%= category.try(:id) %></td>
                    <td><%= category.try(:name) %></td>
                    <td><%= category.try(:category_type) %></td>
                    <td><%= category.try(:created_at)%></td>
                    <td><%= category.try(:updated_at) %></td>
                    <td>
                      <%= link_to admin_category_url(category), data: {disable_with: "<i class='fa fa-spinner'></i>".html_safe} do %>
                        <i class='fa fa-eye large'></i>
                      <% end %>
                      <%= link_to edit_admin_category_url(category), data: {disable_with: "<i class='fa fa-spinner'></i>".html_safe}  do %>
                        <i class='fa fa-edit large'></i>
                      <% end %>
                      <%= link_to admin_category_url(category), data: {disable_with: "<i class='fa fa-spinner'></i>".html_safe, confirm: 'Are you sure want to delete this category ?'}, method: :delete  do %>
                        <i class='fa fa-trash large'></i>
                      <% end %>                                            
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>