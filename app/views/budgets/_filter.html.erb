<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5>Filter for Profit and Loss Statement</h5>
        <div class="ibox-tools">
          <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </div>
      </div>
      <div class="ibox-content" style="display: block;">
        <%= form_tag budgets_url, method: :get, class: 'form-inline' do %>
          <div class="form-group">
            <label class="sr-only">Month</label>
            <%= select_tag :month, options_for_select(list_month, @month), class: 'form-control' %>
          </div>

          <div class="form-group">
            <label class="sr-only">Year</label>
            <%= select_tag :year, options_for_select(@years, @year), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= submit_tag "Search", name: nil, class: 'btn btn-primary btn-inline', data: {disable_with: 'Searching...'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
